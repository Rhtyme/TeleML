#:import SignInCode pages.sign_in.sign_in_code

<SignInCode>:
    code: code_input
    phone: phone_label

    StackLayout:
        orientation: "lr-tb"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: .5
            spacing: 20

            MDLabel:
                id: phone_label
                pos_hint: {"center_x": .5}
                size_hint: .3, None
                text: "The code sent to your"

            MDTextFieldRound:
                id: code_input
                normal_color: [0, 0, 0, 0.2]
                active_color: [0, 0, 0, 0.2]
                icon_type: "left"
                size_hint: .5, None
                pos_hint: {"center_x": .5}
                hint_text: "Enter the code sent by Telegram"

            MDRaisedButton:
                text: "Sign-in"
                #size_hint: .3, None
                size_hint: None, None
                pos_hint: {"center_x": .5}
                width: dp(400) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
                on_release: root.on_sign_in_pressed()

            BoxLayout
                orientation: "horizontal"
                size_hint: .5, None
                pos_hint: {"center_x": .5}
                spacing: 5

                MDLabel:
                    id: wr_nmbr
                    text: "Wrong number?"
                    size_hint: .5, None
                    halign: 'right'
                    pos_hint: {"center_y": .5}

                MDTextButton:
                    text: "Back to phone insert"
                    size_hint: .5, None
                    pos_hint: {"center_y": .5}
                    on_release: root.on_back_to_phone_pressed()




